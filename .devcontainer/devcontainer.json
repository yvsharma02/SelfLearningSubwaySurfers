{
  "name": "SubwaySurfersAI",
  "build": {
    "context": "..",
    "dockerfile": "../Dockerfile",
    "args": {
      "DOCKER_BUILDKIT": "1"
    }
  },
  "workspaceMount": "source=${localWorkspaceFolder},target=/home/ubuntu/subwaysurfersai/workspace,type=bind",
  "workspaceFolder": "/home/ubuntu/subwaysurfersai/workspace",
  "runArgs": [
  "-it",
  "--privileged",
  "--volume=/dev/input:/dev/input", 
   "--gpus",
   "all",
   "--device",
   "/dev/kvm",
    "--add-host=host.docker.internal:host-gateway"
  ],
  "postStartCommand": "setsid bash \"$ROOT_DIR/setup/setup_emulator.sh\" > \"$WORK_DIR/generated/session_log.txt\" 2>&1",
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-azuretools.vscode-docker",
        "zxh404.vscode-proto3"
      ]
    }
  }
}